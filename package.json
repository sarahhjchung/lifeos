{
  "name": "lifeos",
  "version": "0.0.0",
  "description": "productivity app",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist tmp && mkdir tmp && mkdir dist && mkdir dist/assets",
    "html": "cp src/popup.html dist/popup.html",
    "css": "sass src/style.scss dist/style.css",
    "js": "esbuild src/popup.js --bundle --sourcemap --outfile=dist/popup.js",
    "json": "cp src/manifest.json dist/manifest.json",
    "assets": "cp -r src/assets dist",
    "watch-html": "chokidar \"src/**/*.js\" -c \"npm run html\"",
    "watch-css": "chokidar \"src/**/*.scss\" -c \"npm run css\"",
    "watch-js": "chokidar \"src/*.html\" -c \"npm run js\"",
    "watch-json": "chokidar \"src/manifest.json\" -c \"npm run json\"",
    "watch-assets": "chokidar \"src/assets/*\" -c \"npm run assets\"",
    "prestart": "npm run clean && npm run html && npm run css && npm run js && npm run json && npm run assets",
    "start": "npm run watch-html & npm run watch-css & npm run watch-js & npm run watch-json & npm run watch-assets"
  },
  "dependencies": {
    "mithril": "^2.0.4"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^4.3.0",
    "esbuild": "^0.8.31",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "html-minifier": "^4.0.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.2",
    "typescript": "^4.1.3",
    "uglify-js": "^3.12.4"
  }
}
